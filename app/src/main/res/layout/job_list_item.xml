<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/berufTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Beruf"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/arbeitgeberTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Arbeitgeber"
                app:layout_constraintStart_toStartOf="@+id/berufTV"
                app:layout_constraintTop_toBottomOf="@+id/berufTV" />

            <TextView
                android:id="@+id/veroeffentlichungsDatumTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="Datum"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/strasseTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Strasse"
                app:layout_constraintStart_toStartOf="@+id/arbeitgeberTV"
                app:layout_constraintTop_toBottomOf="@+id/arbeitgeberTV" />

            <TextView
                android:id="@+id/plzTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="plz"
                app:layout_constraintStart_toStartOf="@+id/strasseTV"
                app:layout_constraintTop_toBottomOf="@+id/strasseTV" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=","
                app:layout_constraintBottom_toBottomOf="@+id/plzTV"
                app:layout_constraintStart_toEndOf="@+id/plzTV"
                app:layout_constraintTop_toTopOf="@+id/plzTV" />

            <TextView
                android:id="@+id/ortTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="ort"
                app:layout_constraintBottom_toBottomOf="@+id/textView5"
                app:layout_constraintStart_toEndOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/strasseTV" />

            <TextView
                android:id="@+id/regionTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="region"
                app:layout_constraintStart_toStartOf="@+id/plzTV"
                app:layout_constraintTop_toBottomOf="@+id/plzTV" />

            <TextView
                android:id="@+id/landTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Land"
                app:layout_constraintStart_toStartOf="@+id/regionTV"
                app:layout_constraintTop_toBottomOf="@+id/regionTV" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>